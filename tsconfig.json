{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "types",
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "outDir": "build",
        "paths": {
            "*": ["node_modules/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictFunctionTypes": false,
        "strictNullChecks": true,
        "target": "ESNext",
    },
    "exclude": [
        "audit",
        "extras",
        "jest.config.js", 
        "node_modules",
        "node_modules/@types", 
        "tests",
        "types",
        "workers"
    ],
  }
